<?php
$con = mysqli_connect("localhost","root","","iposita");
function selectAll(){
 $get = "select * from packages";
 global $con;
   $statement= mysqli_stmt_init($con);
if (!mysqli_stmt_prepare($statement,$get)) {
      # code...
    echo "oops something went wrong!";
  }else{
  
    mysqli_stmt_execute($statement);
    $run=mysqli_stmt_get_result($statement);
  
 while ( $row = mysqli_fetch_array($run)) {
  	# code...
$id=$row['id'];
$name = $row['customer_name'];
$contact = $row['customer_contact'];
$address = $row['customer_address'];
$date = $row['date'];
$track = $row['track'];
$shelf = $row['shelf'];
$received=$row['received'];
$receivedat=$row['receivedat'];
?>
<tr>
    <td><?php echo $name; ?></td>
    <td><?php echo $contact; ?></td>
    <td><?php echo $address; ?></td>
    <td><?php echo $date; ?></td>
    <td><?php echo $track; ?></td>
    <td><?php echo $shelf; ?></td>
    <?php if($received == 0){?>
    <td><button type="button"   class="btn btn-xs btn-danger btn_confirm"><a href="confirm.php?id=<?php echo $id;?>" style="text-decoration: none;color: white;">confirm</a></button></td> 
    <?php }else if($received == 1) {?>
<td><button type="button" class="btn btn-xs btn-success btn_delete">received</button></td> 
  
<?php 
    }
?>
 <td><?php echo $receivedat; ?></td>
  </tr>
<?php
  }


}
}


?>